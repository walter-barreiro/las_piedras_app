<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCommerceActivity">


    <ImageView
        android:id="@+id/ivEditCommcerceBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvEditCommerceBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivEditCommcerceBanner" />

    <TextView
        android:id="@+id/tvEditCommerceCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEditCommerceSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEditCommcerceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Nombre del comercio"
        app:layout_constraintEnd_toEndOf="@+id/tvEditCommerceBanner"
        app:layout_constraintTop_toBottomOf="@+id/tvEditCommerceBanner" />

    <EditText
        android:id="@+id/etEditCommcerceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Descripcion del comercio"
        app:layout_constraintStart_toStartOf="@+id/etEditCommcerceName"
        app:layout_constraintTop_toBottomOf="@+id/etEditCommcerceName" />

    <Button
        android:id="@+id/btnEditCommerceAddLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar ubicacion"
        app:layout_constraintStart_toStartOf="@+id/etEditCommcerceDescription"
        app:layout_constraintTop_toBottomOf="@+id/etEditCommcerceDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont_bpc"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BusquedaCategoria">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchProduct"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/input_rt"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSelectCat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchProduct"
            android:layout_marginTop="-13dp"
            android:paddingTop="50dp"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
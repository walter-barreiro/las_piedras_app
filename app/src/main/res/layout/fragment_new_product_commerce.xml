<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.NewProductCommerceFragment">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tvCommerceProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre del producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.628"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCommerceProductImage" />

    <com.google.android.material.textfield.TextInputEditText
    android:id="@+id/tvCommerceProductPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Precio"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvCommerceProductName" />


<com.google.android.material.button.MaterialButton
    android:id="@+id/btnCommerceSave"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Guardar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/tvCommerceProductPrice"
    app:layout_constraintTop_toBottomOf="@+id/tvCommerceProductPrice" />

<com.google.android.material.button.MaterialButton
    android:id="@+id/btnCommerceCancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancelar"
    app:layout_constraintBottom_toBottomOf="@+id/btnSave"
    app:layout_constraintEnd_toStartOf="@+id/tvCommerceProductPrice"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvCommerceProductPrice"
    app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvCommerceProductImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir imagen"
        app:layout_constraintEnd_toEndOf="@+id/ivCommerceImage"
        app:layout_constraintStart_toStartOf="@+id/ivCommerceImage"
        app:layout_constraintTop_toBottomOf="@+id/ivCommerceImage" />

    <ImageView
    android:id="@+id/ivCommerceImage"
    android:layout_width="116dp"
    android:layout_height="111dp"
    android:layout_marginTop="16dp"
    android:scaleType="centerCrop"
    android:src="@drawable/ic_launcher_background"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
